{
	"name": "vscode-clean-imports-on-save",
	"displayName": "Clean Imports on Save",
	"description": "Clean unused imports when file (.ts, .tsx, .js, .jsx) is saved without changing the order",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"imports",
		"cleanup",
		"remove",
		"unused",
		"typescript",
		"javascript"
	],
	"license": "MIT",
	"author": "Marios Papamarkou",
	"publisher": "mariospapa",
	"activationEvents": [
		"onCommand:vscode-clean-imports-on-save.cleanImports",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-clean-imports-on-save.cleanImports",
				"title": "Clean Imports"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Clean Imports",
			"properties": {
				"cleanImports.enableOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Enable Auto Clean Imports on Save"
				}
			}
		}
	},
	"icon": "images/icon_small.png",
	"homepage": "https://github.com/mariosdrth/vscode-clean-imports-on-save#readme",
	"bugs": {
		"url": "https://github.com/mariosdrth/vscode-clean-imports-on-save/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mariosdrth/vscode-clean-imports-on-save.git"
	},
	"galleryBanner": {
		"color": "#1B1B1B",
		"theme": "dark"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"clean": "rimraf out",
		"compile": "npm run clean && tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"build": "npm run clean && esbuild \"./src/extension.ts\" --bundle --outfile=out/extension.js --external:vscode",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"esbuild": "^0.14.39",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"vsce": "^2.7.0"
	}
}
